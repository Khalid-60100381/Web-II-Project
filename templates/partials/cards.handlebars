<div class="row">
  {{#each locations}}
    <div class="col-sm-6 col-lg-3 mb-3">
      <div class="card {{#if (eq this.status 'Active')}}bg-success{{else}}bg-danger{{/if}}" "semi-bold">
        <div class="card-body">
          <div class="fw-semibold text-value" style="color: black;">{{this.name}}</div>
          <div style="color: white;">
            <small><i>Status: </i>{{this.status}}</small>
          </div>
          <div class="chart-wrapper">
            <!-- Chart content here, if needed -->
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

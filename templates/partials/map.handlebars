<!-- Leaflet map container -->
          <div id="map"></div>

          <!-- Leaflet JavaScript, consider using HTTPS if available -->
          <script src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
          <script>
            // Initialize the map on the "map" div with a given center and zoom
              var map = L.map('map').setView([25.276987, 51.520008], 12);

              // Add OpenStreetMap tiles
              L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors'
              }).addTo(map);

              // Define the arrow icon
              var arrowIcon = L.icon({
                iconUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/images/marker-icon-2x.png',
                iconSize: [25, 41],
                iconAnchor: [12, 41],
                popupAnchor: [1, -34]
              });

              // Add markers to the map
              var locations = [
                { latLng: [25.276987, 51.520008], name: "Feeding Site #1: Duhail" },
                { latLng: [25.291210, 51.530014], name: "Feeding Site #2: Al Gharrafa" },
                { latLng: [25.260495, 51.492058], name: "Feeding Site #3: Al Rayyan" },
                { latLng: [25.213416, 51.505737], name: "Feeding Site #4: Al Wakrah" }
              ];

              // Loop through the locations and add a marker for each
              locations.forEach(function(location) {
                L.marker(location.latLng, {icon: arrowIcon}).addTo(map)
                  .bindPopup(location.name);
              });

              // Optionally, open the popup for the first marker
              // L.marker(locations[0].latLng, {icon: arrowIcon}).addTo(map).openPopup();
          </script>
          <ul id="location-list">
            {{#each locations}}
            <li>{{this.name}}: {{this.info}}</li>
            {{/each}}
          </ul>
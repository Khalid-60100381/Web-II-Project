<div class="card mb-4">
            <div class="card-body">
              <div class="table-responsive">
                    <div class="table-responsive">
                      <table class="table border mb-0">
                        <thead class="table-light fw-semibold">
                          <tr class="align-middle">
                            <th class="text-center">Location</th>
                            <th class="text-center">Food and Water Levels</th>
                            <th class="text-center"># of Cats</th>
                            <th class="text-center">Health Status</th>
                            <th class="text-center">Critical Items</th>
                            <th class="text-center">Last Visit/Update</th>
                          </tr>
                        </thead>
                       <tbody>
                          {{#each locations as |locations|}}
                         <tr class="align-middle">

                            <td class="text-center">
                              <div class="fw-semibold">{{locations.name}}</div>
                            </td>
                            <td class="text-center">
                              <div class="clearfix">
                                <div class="float-start">
                                  <div class="fw-semibold">{{locations.food_level}}</div>
                               </div>
                               <div class="float-end"><small class="text-medium-emphasis">Food Level</small></div>
                             </div>
                             <div class="progress progress-thin">
                               <div class="progress-bar bg-success" role="progressbar" style="width: {{locations.food_level}};" aria-valuenow="{{locations.food_level}}" aria-valuemin="0" aria-valuemax="100"></div>
                             </div>
                              <div class="clearfix">
                                 <div class="float-start">
                                 <div class="fw-semibold">{{locations.water_level}}</div>
                               </div>
                              <div class="float-end"><small class="text-medium-emphasis">Water Level</small></div>
                            </div>
                            <div class="progress progress-thin">
                              <div class="progress-bar bg-success" role="progressbar" style="width: {{locations.water_level}};" aria-valuenow="{{locations.water_level}}" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                          </td>
                          <td class="text-center">
                            <div>{{locations.cat_number}}</div> <!-- Assuming you have a property like this -->
                          </td>
                          <td class="text-center">
                            <!-- Activity info, modify as needed -->
                            <div class="fw-semibold">Health Issues:</div>
                            <div><i>{{locations.health_issue}}</i></div> <!-- Assuming you store last update date -->
                          </td>
                          <td class="text-center">
                            <div >
                              <div class="fw-semibold">LitterBox:</div>
                              <p>
                                {{#if locations.critical_item.letterbox}}
                                <i>Available</i>
                                {{else}}
                                <i>Missing</i>
                                {{/if}}
                              </p>
                            </div>
                            <div>
                              <div class="fw-semibold">Food Bowl:</div>
                              <p>
                                {{#if locations.critical_item.food_bowl}}
                                <i>Available</i>
                                {{else}}
                                <i>Missing</i>
                                {{/if}}
                              </p>
                            </div>
                            <div>
                              <div class="fw-semibold">Water Bowl:</div>
                              <p>
                                {{#if locations.critical_item.water_bowl}}
                               <i> Available</i>
                                {{else}}
                               <i> Missing</i>
                                {{/if}}
                              </p>
                            </div>
                          </td>
                          <td class="text-center">
                            <div class="fw-semibold">Last Update was from:<br></div><i>{{formatLastUpdated locations.lastUpdated}}</i></div> <!-- Assuming you have a property like this -->
                          </td>
                        </tr>
                        {{/each}}
                        </tbody>
                      </table>
                  </div>
            </div>
            </div>
           </div>
           
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <!-- CoreUI CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@coreui/coreui/dist/css/coreui.min.css">
</head>
<body>
    <!-- Check if there is an invalid email message -->
    {{#if invalidEmail}}
      <div class="alert alert-danger" role="alert">
        {{invalidEmail}}
      </div>
    {{/if}}
    <!-- Check if an email link was successfully sent -->
    {{#if emailLinkSent}}
      <div class="alert alert-success" role="alert">
        {{emailLinkSent}}
      </div>
    {{/if}}
    <!-- Check if there is an invalid reset key message -->
    {{#if invalidResetKey}}
      <div class="alert alert-danger" role="alert">
        {{invalidResetKey}}
      </div>
    {{/if}}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <!-- Card header with strong title -->
                    <div class="card-header">
                        <strong>Password Reset</strong>
                    </div>
                    <!-- Card body containing the form -->
                    <div class="card-body">
                        <!-- Form for submitting email -->
                        <form action="/submit-email" method="POST">
                          <!-- Email input field -->
                            <div class="mb-3">
                                <label for="email" class="form-label" >Email address</label>
                                <input type="email" class="form-control" id="email" name="emailInput" placeholder="name@example.com" required>
                                <!-- CSRF token hidden input field -->
                                <input type="hidden" name="csrf" value="{{csrfToken}}"></input>
                            </div>
                            <!-- Submit button -->
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" type="submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CoreUI Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/@coreui/coreui/dist/js/coreui.bundle.min.js"></script>
</body>
</html>
